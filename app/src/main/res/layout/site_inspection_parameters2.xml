                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"/>
                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"
