                    android:id="@+id/back_btn"/>

                <LinearLayout
                    style="@style/inhead">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:background="@drawable/site_inspection_logo"
                        style="@style/inhead_ico"/>
                    <com.dc_walk.CustomClasses.CustomTextView
                        style="@style/inhead_ttl"
                        android:text="Site Inspection"/>
                    <com.dc_walk.CustomClasses.CustomTextView
                        android:id="@+id/text_logo"
                        style="@style/inhead_subttl"
                        android:text="Civil Works"/>
                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/list"
                style="@style/remarkFrame">

                <View
                    android:id="@+id/lineimgid"
                    style="@style/lineView1"></View>



                <ScrollView
                    android:layout_marginTop="0dp"
                    android:paddingBottom="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            style="@style/rfi_listtab">

                            <FrameLayout
                                style="@style/listview_checklin">
                                <RelativeLayout
                                    style="@style/text_relative">
                                    <com.dc_walk.CustomClasses.CustomTextView
                                        style="@style/listview_text"
                                        android:text="Location/ Co-ordinates of drain"/>
                                </RelativeLayout>
                                <LinearLayout
                                    style="@style/listview_checklin2"
                                    >
                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"/>
                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="3dp"/>
                                    <ImageButton
                                        android:id="@+id/remButton"
                                        android:layout_gravity="right|bottom"
                                        style="@style/remark_btn"
                                        />
                                </LinearLayout>

                            </FrameLayout>
                            <View
                                style="@style/lcview"
                                />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">

                            <FrameLayout
                                style="@style/listview_checklin">
                                <RelativeLayout
                                    style="@style/text_relative">
                                    <com.dc_walk.CustomClasses.CustomTextView
                                        style="@style/listview_text"
