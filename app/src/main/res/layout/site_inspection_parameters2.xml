                                        style="@style/remark_btn"
                                        />
                                </LinearLayout>

                            </FrameLayout>
                            <View
                                style="@style/lcview"
                                />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">

                            <FrameLayout
                                style="@style/listview_checklin">
                                <RelativeLayout
                                    style="@style/text_relative">
                                    <com.dc_walk.CustomClasses.CustomTextView
                                        style="@style/listview_text"
                                        android:text="Dimensions of drain"/>
                                </RelativeLayout>
                                <LinearLayout
                                    style="@style/listview_checklin2"
                                    >
                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"/>
                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="3dp"/>
                                    <ImageButton
                                        android:layout_gravity="right|bottom"
