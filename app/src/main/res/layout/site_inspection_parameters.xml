<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece1d0"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                style="@style/page_body">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="25dp"

                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:id="@+id/back_btn"/>

                <LinearLayout
                    style="@style/inhead">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:background="@drawable/site_inspection_logo"
                        style="@style/inhead_ico"/>
                    <com.dc_walk.CustomClasses.CustomTextView
                        style="@style/inhead_ttl"
                        android:text="Site Inspection"/>
                    <com.dc_walk.CustomClasses.CustomTextView
                        android:id="@+id/text_logo"
                        style="@style/inhead_subttl"
                        android:text="Foundation of Poles"/>
                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/list"
                style="@style/remarkFrame">

                <View
                    android:id="@+id/lineimgid"
                    style="@style/lineView1"></View>
                <LinearLayout
                    style="@style/rfi_listtab">
                    <com.dc_walk.CustomClasses.CustomTextView
                        android:text="Total No. of Foundations(Nos)"
                        style="@style/listview_text"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <FrameLayout
                        android:layout_below="@+id/textView1"
                        style="@style/listview_checklin3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:weightSum="2"
                            android:orientation="horizontal">
                            <com.dc_walk.CustomClasses.CustomTextInput
                                style="@style/input_gen"
                                android:id="@+id/ed_vibrator40"
                                android:layout_weight="1"
                                android:hint="Total"
                                android:text="5"
                                android:layout_marginBottom="3dp"/>
                            <com.dc_walk.CustomClasses.CustomTextInput
                                style="@style/input_gen"
                                android:layout_weight="1"
                                android:id="@+id/ed_vibrator60"
                                android:hint="Completed"
                                android:layout_marginBottom="3dp"/>
                        </LinearLayout>
                        <ImageButton
                            style="@style/remark_btn"/>
                    </FrameLayout>


                    <View
                        android:layout_below="@+id/listview_checklin"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#338F6C12"/>
                </LinearLayout>

                <!--<ListView-->
                    <!--android:id="@+id/listView"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginBottom="120dp"-->
                    <!--android:layout_marginLeft="22dp"-->
                    <!--android:layout_marginRight="22dp"-->
                    <!--android:choiceMode="multipleChoice"-->
                    <!--android:divider="@android:color/transparent"-->
                    <!--android:dividerHeight="5dp"-->
                    <!--android:textSize="8px" />-->



                <ScrollView
                    android:layout_marginTop="80dp"
                    android:paddingBottom="120dp"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            style="@style/rfi_listtab">

                            <FrameLayout
                                android:id="@+id/material"
                                android:layout_below="@+id/textView1"
                                style="@style/listview_checklin">
                                <com.dc_walk.CustomClasses.CustomTextView
                                    android:text="Parameter 1"
                                    style="@style/listview_text"
                                    />
                                <LinearLayout
                                    style="@style/listview_checklin2">

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"/>

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"/>
                                </LinearLayout>
                                <ImageButton
                                    style="@style/remark_btn"
                                    />
                            </FrameLayout>
                            <View
                                android:layout_below="@+id/listview_checklin"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#338F6C12"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">
                            <com.dc_walk.CustomClasses.CustomTextView
                                android:text="Parameter 1"
                                style="@style/listview_text"
                                />
                            <FrameLayout
                                android:id="@+id/material"
                                android:layout_below="@+id/textView1"
                                style="@style/listview_checklin">
                                <LinearLayout
                                    style="@style/listview_checklin2">

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"/>

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"/>
                                </LinearLayout>
                                <ImageButton
                                    style="@style/remark_btn"
                                    />
                            </FrameLayout>
                            <View
                                android:layout_below="@+id/listview_checklin"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#338F6C12"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">
                            <com.dc_walk.CustomClasses.CustomTextView
                                android:text="Parameter 1"
                                style="@style/listview_text"
                                />
                            <FrameLayout
                                android:id="@+id/material"
                                android:layout_below="@+id/textView1"
                                style="@style/listview_checklin">
                                <LinearLayout
                                    style="@style/listview_checklin2">

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"/>

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"/>
                                </LinearLayout>
                                <ImageButton
                                    style="@style/remark_btn"
                                    />
                            </FrameLayout>
                            <View
                                android:layout_below="@+id/listview_checklin"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#338F6C12"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">
                            <com.dc_walk.CustomClasses.CustomTextView
                                android:text="Parameter 1"
                                style="@style/listview_text"
                                />
                            <FrameLayout
                                android:id="@+id/material"
                                android:layout_below="@+id/textView1"
                                style="@style/listview_checklin">
                                <LinearLayout
                                    style="@style/listview_checklin2">

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"/>

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"/>
                                </LinearLayout>
                                <ImageButton
                                    style="@style/remark_btn"
                                    />
                            </FrameLayout>
                            <View
                                android:layout_below="@+id/listview_checklin"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#338F6C12"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/rfi_listtab">
                            <com.dc_walk.CustomClasses.CustomTextView
                                android:text="Parameter 1"
                                style="@style/listview_text"
                                />
                            <FrameLayout
                                android:id="@+id/material"
                                android:layout_below="@+id/textView1"
                                style="@style/listview_checklin">
                                <LinearLayout
                                    style="@style/listview_checklin2">

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox"
                                        style="@style/check_roundo"/>

                                    <CheckBox
                                        android:background="@drawable/custom_checkbox_ok"
                                        style="@style/check_roundo"/>
                                </LinearLayout>
                                <ImageButton
                                    style="@style/remark_btn"
                                    />
                            </FrameLayout>
                            <View
                                android:layout_below="@+id/listview_checklin"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#338F6C12"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    style="@style/btn_holdrow"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/take_photo_factory_button" />

                        <com.dc_walk.CustomClasses.CustomTextButton
                            android:id="@+id/imageButton5"
                            style="@style/btn_frm_btn"
                            android:text="Take Picture" />
                    </FrameLayout>

                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/item_observation_btn" />

                        <com.dc_walk.CustomClasses.CustomTextButton
                            android:id="@+id/imageButton6"
                            style="@style/btn_frm_btn"
                            android:text="Item Obsr." />
                    </FrameLayout>

                    <FrameLayout
                        style="@style/button_frame"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/btn_frm_img"
                            android:src="@drawable/ico_tik" />

                        <com.dc_walk.CustomClasses.CustomTextButton
                            android:id="@+id/imageButton7"
                            style="@style/btn_frm_btn"
                            android:text="Done" />
                    </FrameLayout>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <com.dc_walk.CustomClasses.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:text="Parameter Name here"/>
            <com.dc_walk.CustomClasses.CustomTextInput
                android:layout_width="match_parent"
                android:hint="Type here"
                android:layout_height="100dp"
                android:gravity="top"
                android:textSize="12dp"
                android:padding="5dp"
                android:background="@drawable/edittextstyle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="right">
                <com.dc_walk.CustomClasses.CustomTextButton
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#B7A5CC"
                    android:layout_gravity="right"
                    android:text="Cancel"/>
                <com.dc_walk.CustomClasses.CustomTextButton
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#B3EE98"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:text="Send"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>